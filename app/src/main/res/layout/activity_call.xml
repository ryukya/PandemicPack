<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".CallActivity">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:padding="10dp"
        android:text="Poland Emergency Call List "
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/General"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_customer_service_agent" />

        <Button
            android:id="@+id/bGen"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/baloo"
            android:text="General Emergency "
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="269dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Ambulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/General"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_ambulance" />

        <Button
            android:id="@+id/bAmbu"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/baloo"
            android:text="Ambulance"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="269dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Fire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ambulance"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_fire" />

        <Button
            android:id="@+id/bFires"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/baloo"
            android:text="Fire Fighter"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="269dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Police"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Fire"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_security_guard" />

        <Button
            android:id="@+id/bPolices"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/baloo"
            android:text="Police"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="269dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Eu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Police"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_europe" />

        <Button
            android:id="@+id/bEuro"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#000000"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/baloo"
            android:text="Anywhere in Europe"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="269dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Eu"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:padding="20dp"
        android:text="Attention: remember to dial the local code before the number, for example:  22 â€“ 997 to call the police in Warsaw. Emergency calls from phone boxes are free of charge. If you do not know the local code, dial the general emergency number for mobile phones: 112. The operator will request the appropriate emergency unit." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="10dp"
        android:text="source: https://www.staypoland.com/poland/emergency/"
        android:textSize="10sp" />
</RelativeLayout>